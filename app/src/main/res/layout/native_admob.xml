<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ad_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ad_headline"
                android:layout_toRightOf="@+id/ad_app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18.8sp"
                android:textColor="#ff6a25"
                android:lineSpacingExtra="2.3sp"
                tools:text="Foodpanda avc abc def" />

            <TextView
                android:layout_below="@+id/ad_headline"
                android:id="@+id/ad_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:lineSpacingExtra="3.3sp"
                tools:text="Order your food with foodpanda Order your foodwith food
panda"/>

            <Button
                android:id="@+id/ad_call_to_action"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/enable_button"
                android:layout_alignParentRight="true"
                android:text="Install"
                android:textColor="@android:color/white"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>

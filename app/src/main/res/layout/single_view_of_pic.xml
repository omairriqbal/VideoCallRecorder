<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

        <androidx.cardview.widget.CardView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardBackgroundColor="#fff"
            android:elevation="@dimen/_5sdp"
            app:ignore="NamespaceTypo">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="150dp"
                            android:layout_height="90dp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/list_background"
                            android:id="@+id/top">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/video_thumbnail"
                                    android:scaleType="fitXY"
                                    android:background="@android:color/transparent"
                                    card_view:shapeAppearanceOverlay="@style/circleImageView" />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/video_name"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/top"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:textColor="#ff6a25"
                            android:text="Name of Image File"
                            android:layout_marginTop="15dp" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23-03-2019"
                            android:textAllCaps="false"
                            android:textSize="9sp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@android:color/tab_indicator_text" />

                        <TextView
                            android:id="@+id/video_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/top"
                            android:text="40mb"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:textColor="@android:color/tab_indicator_text"
                            android:textSize="9dp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="10dp"
                            android:layout_alignParentBottom="true" />

                        <ImageView
                            android:id="@+id/menu"
                            android:layout_width="20dp"
                            android:layout_height="30dp"

                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:paddingTop="10dp"
                            android:src="@drawable/dashboard_dotted_menu" />

                </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/adLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <include layout="@layout/loading_layout"/>
</LinearLayout>

